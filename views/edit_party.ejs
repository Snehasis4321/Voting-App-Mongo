<% layout('main.ejs')%>
    <h1>New Party</h1>
    <br>
    <form action="/parties/edit/<%=party.id%>?_method=PUT" method="post">
        <div class="inp-box">Name : </div>
        <input type="text" name="name" id="name" value="<%=party.name%>">
        <br><br>
        <div class="inp-box">Image :</div>
        <input type="text" name="image" id="image" value="<%=party.image%>">
        <br><br>
        <div class="inp-box">Leader :</div>
        <input type="text" name="leader" id="leader" value="<%=party.leader%>">
        <br><br>
        <div class="inp-box">Manifesto : </div>
        <input type="text" name="manifesto" id="manifesto" value="<%=party.manifesto%>">
        <br><br>
        <button type="submit">Submit</button>
    </form>